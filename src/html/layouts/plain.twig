{# CONFIG #}
{% block config %}
	{% set unitName = "e@ubc" %}
	{% set siteURL = "e.ubc.ca" %}
	{% set facultyName = "" %}
	{% set campus = 'vancouver' %}
	{% set clfversion = 7 %}
	{% set clf_sticky = TRUE %}
	{% set show_nav_secondary = FALSE %}
	{%
		set bodyClasses = 'legacy--bw overflow-x-hidden layout--full-width'
	%}
{% endblock %}

<!doctype html>
<html class="no-js" lang="en">

<head>
	<meta charset="UTF-8">
	<title>{{ title }} | {{ unitName }}</title>
	{% include "../includes/head.twig" %}
	{% block custom_css %}{% endblock %}
</head>

<body>
	<div id="main-content">
		{% block masthead %}{% endblock %}
		{% if showTitle %}
			<h1>{{ pageTitle }}</h1>
		{% endif %}
		{% block content %}{% endblock %}
		{% block areab %}{% endblock %}
		{% block areac %}{% endblock %}
		{% block prefooter %}{% endblock %}
	</div>
	{% include "../includes/scripts.twig" %}
	{% block custom_javascript %}{% endblock %}
</body>

</html>
